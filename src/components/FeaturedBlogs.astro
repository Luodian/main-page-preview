---
const externalFeatured = {
  id: "onevision-encoder",
  title: "OneVision-Encoder",
  href: "/onevision-encoder/index.html",
  thumbnail: "/images/blog_thumbnails/onevision_encoder.png",
  publishDate: new Date("2025-12-25"),
};
---

<section class="max-w-7xl mx-auto py-12 border-b-2 border-gray-500 sm:border-b-0">
  <div class="h-[40vh] sm:h-[40vh]">
    <a href={externalFeatured.href} class="group relative overflow-hidden rounded-2xl h-full block">
      <img
        src={externalFeatured.thumbnail}
        alt={externalFeatured.title}
        class="absolute inset-0 w-full h-full object-cover z-[-1] group-hover:scale-105 transition-transform duration-300"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>
      <div class="absolute bottom-0 left-0 right-0 p-4 sm:p-8 text-white">
        <h3 class="!text-sm sm:!text-xl font-bold mb-2">{externalFeatured.title}</h3>
        <p class="!text-xs sm:!text-sm opacity-90">{externalFeatured.publishDate.toLocaleDateString("en-US", {month: "short", day: "2-digit", year: "numeric"})}</p>
      </div>
    </a>
  </div>
</section>

---
import type { CollectionEntry } from "astro:content";

const featuredPostsConfig = [
  {
    id: "longvt",
    featured: true,
  },
  {
    id: "openmmreasoner",
    featured: false,
    order: 1
  },
  {
    id: "llava_onevision_1_5",
    featured: false,
    order: 2
  },
];

const { posts } = Astro.props as {
  posts: CollectionEntry<"post">[];
};

const postsById = new Map(posts.map(post => [post.id, post]));
const orderedPosts = featuredPostsConfig
  .map(config => postsById.get(config.id)!)
  .filter(Boolean);
const featuredId = featuredPostsConfig.find(fp => fp.featured)?.id;
const featured = orderedPosts.find(post => post.id === featuredId);
const others = orderedPosts.filter(post => post.id !== featuredId);
---

<section class="max-w-7xl mx-auto py-12 border-b-2 border-gray-500 sm:border-b-0">
  
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 h-[80vh] sm:h-[40vh] ">
    {featured && (
      <a href={`/posts/${featured.id}/`} class="lg:col-span-2 group relative overflow-hidden rounded-2xl h-full min-h-[300px] block">
        <img 
          src={featured.data.thumbnail || "/images/featured-4.jpg"}
          alt={featured.data.title}
          class="absolute inset-0 w-full h-full object-cover z-[-1] group-hover:scale-105 transition-transform duration-300"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 p-4 sm:p-8 text-white">
          <h3 class="!text-sm sm:!text-xl font-bold mb-2">{featured.data.title}</h3>
          <p class="!text-xs sm:!text-sm opacity-90">{featured.data.publishDate.toLocaleDateString("en-US", {month: "short", day: "2-digit", year: "numeric"})}</p>     
        </div>
      </a>
    )}

    <!-- desktop -->
    <div class="hidden sm:grid grid-cols-1 gap-4">
      {others.map(post => (
        <a href={`/posts/${post.id}/`} class="group relative overflow-hidden rounded-2xl flex-1 min-h-[120px] block">
          <img 
            src={post.data.thumbnail || "/images/featured-4.jpg"}
            alt={post.data.title}
            class="absolute inset-0 w-full h-full object-cover z-[-1] group-hover:scale-105 transition-transform duration-300"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>
          <div class="absolute bottom-0 left-0 right-0 p-4 text-white">
            <h3 class="!text-sm sm:!text-xl font-semibold mb-1 line-clamp-2">{post.data.title}</h3>
            <p class="!text-xs sm:!text-sm opacity-90">{post.data.publishDate.toLocaleDateString("en-US", {month: "short", day: "2-digit", year: "numeric"})}</p>
          </div>
        </a>
      ))}
    </div>

    <!-- mobile -->
    <div class="grid sm:hidden grid-cols-1 gap-2">
      {others.map(post => (
        <a href={`/posts/${post.id}/`} class="group relative overflow-hidden flex min-h-[120px]">
         
          <div class="flex flex-col w-full justify-end p-4 text-black">
            <h3 class="!text-sm sm:!text-xl font-semibold mb-1 line-clamp-2">{post.data.title}</h3>
            <p class="!text-xs sm:!text-sm opacity-90">{post.data.publishDate.toLocaleDateString("en-US", {month: "short", day: "2-digit", year: "numeric"})}</p>
            <div class="text-gray-500 text-sm text-right underline decoration-dotted underline-offset-2 cursor-pointer hover:text-blue-600 transition-colors ">Read More</div>
          </div>
        </a>
      ))}
    </div>

    
  </div>
</section>

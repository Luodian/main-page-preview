---
export interface Props {
  summary: string;
}

const { summary } = Astro.props;
---

<div class="max-w-3xl mx-auto mb-4">
  <details class="group">
    <summary class="flex items-center w-full text-left cursor-pointer focus:outline-none list-none">
      <svg 
        class="mr-2 w-4 h-4 transition-transform duration-200 group-open:rotate-90"
        fill="currentColor" 
        viewBox="0 0 20 20"
      >
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
      </svg>
      <span class="font-medium">{summary}</span>
    </summary>
    <div class="mt-3 pl-6 text-sm text-gray-700 leading-relaxed">
      <slot />
    </div>
  </details>
</div>

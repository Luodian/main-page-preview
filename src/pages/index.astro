---
import PageLayout from "@/layouts/Base.astro";
import { Image } from "astro:assets";
import LazyImage from "@/components/LazyImage.astro";
---

<PageLayout meta={{ title: "Home" }}>
	<!-- Hero section -->
	<!-- Featured News Section -->
	<section class="relative px-6 pb-12 md:py-12 max-w-7xl mx-auto">
		<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
			
			<!-- Left: Big Featured Post -->
			<div class="lg:col-span-2">
				<div class="group sticky top-6 flex flex-col gap-6">
					
					<!-- Featured Image + Overlay -->
					<div class="relative w-full h-[60vh] rounded-2xl overflow-hidden shadow-lg">
						<LazyImage 
							src="/images/featured-3.jpg" 
							alt="LLaVA-OneVision-1.5" 
							width={1200} 
							height={800} 
							class="w-full h-full object-cover group-hover:scale-[1.02] transition-transform duration-200 ease-out" 
							loading="eager"
							rounded={true}
							skeletonClass="rounded-2xl"
						/>
						<div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
						<div class="absolute bottom-6 left-6 right-6 text-white">
							<h2 class="text-4xl md:text-4xl font-bold mt-3">
								LLaVA-OneVision-1.5
							</h2>
							<p class="mt-2 text-xs font-medium md:text-base text-gray-200">
								Unified multimodal foundation spanning images, multi-image, and video understanding in one open model.
							</p>
						</div>
					</div>
	
					<!-- Buttons under image -->
					<div class="flex gap-4 mb-4 justify-center md:justify-start">
						<a href="/posts/llava_onevision/" 
							 class="px-5 py-2 border border-gray-300 rounded-full text-gray-700 dark:text-gray-100 
											hover:border-accent-one hover:text-accent-one transition-all text-[0.625rem] leading-[1rem] md:text-sm font-medium dark:hover:text-accent-base">
							Get Started
						</a>
						<a href="https://llava-vl.github.io/blog/2024-08-05-llava-onevision/"
							 class="px-5 py-2 border border-gray-300 bg-accent-one rounded-full text-gray-100 dark:text-gray-900 
											hover:border-accent-one hover:bg-transparent hover:text-accent-one dark:hover:text-gray-200 transition-all text-[0.625rem] leading-[1rem] md:text-sm font-medium dark:font-medium dark:hover:font-normal">
							Learn More
						</a>
						
					</div>
					
				</div>
			</div>

			<!-- Right: Smaller Posts -->
			<div class="flex flex-col gap-6 w-full">
				<!-- Post Card - LMMs-Eval -->
				<a href="https://github.com/EvolvingLMMs-Lab/lmms-eval" class="group flex flex-col gap-4 items-start mb-6">
					<div class="w-fill aspect-square rounded-lg overflow-hidden flex-shrink-0">
						<LazyImage 
						src="/images/featured-1.jpg" 
						alt="LMMs-Eval" 
						width={800} 
						height={800} 
						class="w-full h-full object-cover group-hover:scale-[1.02] transition-transform ease-out" 
						format="webp"
						loading="eager"
						aspectRatio="1/1"
						rounded={true}
						skeletonClass="rounded-lg"
					/>
					</div>
					<div>
						<h2 class="font-semibold text-lg group-hover:text-accent-one transition-colors">LMMs-Eval v0.4</h2>
						<p class="text-sm font-medium text-textColor/70 dark:text-textColorDark/70 line-clamp-2">Comprehensive evaluation framework for multimodal models.</p>
					</div>
				</a>

				<!-- Post Card - LLaVA-Critic-R1 -->
				<a href="/posts/llava_critic_r1/" class="group flex flex-col gap-4 items-start mb-6">
					<div class="w-fill aspect-square rounded-lg overflow-hidden flex-shrink-0">
						<LazyImage
						src="/images/featured-4.jpg" 
						alt="LLaVA-Critic-R1" 
						width={800} 
						height={800} 
						class="w-full h-full object-cover group-hover:scale-[1.02] transition-transform ease-out" 
						format="webp"
						loading="eager"
						aspectRatio="1/1"
						rounded={true}
						skeletonClass="rounded-lg"
						/>
					</div>
					<div>
						<h2 class="font-semibold text-lg group-hover:text-accent-one transition-colors">LLaVA-Critic-R1</h2>
						<p class="text-sm font-medium text-textColor/70 dark:text-textColorDark/70 line-clamp-2">Unified critic and policy model through reinforcement learning at the 7B scale.</p>
					</div>
				</a>

				<!-- Post Card - Aero-1-Audio -->
				<a href="/posts/aero_audio/" class="group flex flex-col gap-4 items-start">
					<div class="w-fill aspect-square rounded-lg overflow-hidden flex-shrink-0">
						<LazyImage 
						src="/images/featured-2.jpg" 
						alt="Aero-1-Audio" 
						width={800} 
						height={800} 
						class="w-full h-full object-cover group-hover:scale-[1.02] transition-transform ease-out" 
						format="webp"
						loading="eager"
						aspectRatio="1/1"
						rounded={true}
						skeletonClass="rounded-lg"
						/>
					</div>
					<div>
						<h2 class="font-semibold text-lg group-hover:text-accent-one transition-colors">Aero-1-Audio</h2>
						<p class="text-sm font-medium text-textColor/70 dark:text-textColorDark/70 line-clamp-2">Frontier Open Audio Models.</p>
					</div>
				</a>
			</div>
		</div>
	</section>

	<!-- Background blur -->
	<div class="absolute top-0 left-1/2 md:top-[-15%] -ml-[50vw] min-h-screen w-screen pointer-events-none blur-3xl opacity-50 overflow-x-hidden">
		<div class="absolute top-[10%] right-[-40%] w-[65%] h-full bg-gradient-to-b from-purple-300 via-blue-300 to-transparent rounded-full opacity-30 dark:opacity-10"></div>
		<div class="absolute top-[10%] left-[-40%] w-[65%] h-full bg-gradient-to-b from-blue-300 via-pink-300 to-transparent rounded-full opacity-30 dark:opacity-10"></div>
		<div class="absolute top-[-20%] left-[-50%] w-[85%] h-full bg-gradient-to-b from-indigo-300 via-orange-300 to-transparent rounded-full opacity-60 dark:opacity-10"></div>
		<div class="absolute top-[-20%] right-[-50%] w-[85%] h-full bg-gradient-to-b from-orange-300 via-indigo-300 to-transparent rounded-full opacity-60 dark:opacity-10"></div>
	</div>


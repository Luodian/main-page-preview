<PageLayout meta={{ title: "Home" }}>
	<!-- Hero section -->
	<!-- Background blur -->
	<div class="absolute top-0 left-1/2 md:top-[-15%] -ml-[50vw] min-h-screen w-screen pointer-events-none blur-3xl opacity-50 overflow-x-hidden">
		<div class="absolute top-[10%] right-[-40%] w-[65%] h-full bg-gradient-to-b from-purple-300 via-blue-300 to-transparent rounded-full opacity-30 dark:opacity-10"></div>
		<div class="absolute top-[10%] left-[-40%] w-[65%] h-full bg-gradient-to-b from-blue-300 via-pink-300 to-transparent rounded-full opacity-30 dark:opacity-10"></div>
		<div class="absolute top-[-20%] left-[-50%] w-[85%] h-full bg-gradient-to-b from-indigo-300 via-orange-300 to-transparent rounded-full opacity-60 dark:opacity-10"></div>
		<div class="absolute top-[-20%] right-[-50%] w-[85%] h-full bg-gradient-to-b from-orange-300 via-indigo-300 to-transparent rounded-full opacity-60 dark:opacity-10"></div>
	</div>
	<section class="relative flex flex-col items-center justify-center min-h-[40vh] text-center px-6 pb-16">
		<div class="max-w-3xl">
			<h1 class="text-5xl md:text-7xl font-bold tracking-tight mb-4">
                Releasing
				<span class="block xl:inline bg-gradient-to-r from-accent-two/85 via-accent-one/85 to-accent-two/85 dark:from-accent-two dark:via-accent-one dark:to-accent-two bg-clip-text text-transparent">
					Aero-1-Audio Models
				</span>
			</h1>
			<p class="mt-4 mb-6 text-lg text-textColor/80 dark:text-textColorDark/80">
				Aero-1-Audio is a 1.5B compact audio model capable of handling a range of audio tasks, including speech recognition, audio understanding, and audio instructions following.
			</p>
			<!-- Replaced img with responsive YouTube iframe embed -->
			<div class="relative my-6 mx-auto rounded-lg shadow-md overflow-hidden hover:brightness-110 transition-all w-full max-w-3xl" style="padding-bottom: 56.25%;"> <!-- 16:9 Aspect Ratio -->
				<iframe
					class="absolute top-0 left-0 w-full h-full"
					src="https://www.youtube.com/embed/yjlOfI0FPCM"
					title="YouTube video player for Aero-1-Audio"
					frameborder="0"
					allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
					referrerpolicy="strict-origin-when-cross-origin"
					allowfullscreen>
				</iframe>
			</div>
			<div class="flex flex-col sm:flex-row justify-center gap-4">
				<a href="/posts/lmms-lab-docs/aero_audio/" class="relative flex items-center justify-center h-12 px-6 rounded-lg shadow-lg hover:brightness-110 transition-all bg-gradient-to-r from-accent-one to-accent-two">
					<span class="text-bgColor font-semibold">
						Start Building
					</span>
				</a>
				<a href="/posts/aero_audio/" class="relative flex items-center justify-center h-12 px-6 rounded-lg shadow-lg bg-bgColor dark:bg-bgColorDark border border-borderColor dark:border-borderColorDark hover:brightness-110 hover:bg-bgColor/90 dark:hover:bg-bgColorDark/90">
					<span class="font-semibold text-textColor dark:text-textColorDark">
						Learn More
					</span>
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 ml-2"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" /></svg>
				</a>
			</div>
		</div>
	</section>

	<!-- Features Section -->
	<section class="pt-2 md:pt-4 pb-4 md:pb-4 px-4">
		<div class="max-w-5xl mx-auto">
			<div class="text-center mb-6">
				<span class="inline-block px-3 py-1 text-sm font-semibold tracking-wider text-accent-one uppercase rounded-full bg-accent-one/10 mb-2">More</span>
				<!-- <h2 class="text-3xl md:text-4xl font-bold tracking-tight mb-4">Feeling and Building Multimodal Intelligence</h2> -->
				<p class="text-lg text-textColor/70 dark:text-textColorDark/70 max-w-2xl mx-auto">
					LMMs-Lab is a non-profit research-oriented organization with a group of passionate researchers, we share the sincere passion for developing multimodal intelligence.
				</p>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				<!-- Feature 1: Models -->
				<a href="/tags/models" class="block p-6 rounded-lg bg-bgColor/50 dark:bg-bgColorDark/50 border border-borderColor/100 dark:border-borderColorDark/100 shadow-lg hover:shadow-xl transition-shadow duration-300 ease-in-out">
					<div class="flex items-center mb-3">
						<div class="p-2 rounded-full bg-accent-one/10 mr-3 shadow-md border border-borderColor/100 dark:border-borderColorDark/100">
							<!-- Replace SVG with image for Models -->
							<img src="/images/icons8-brain-100.png" alt="Models Icon" class="w-8 h-8" />
						</div>
						<h3 class="text-xl font-bold text-black">Models</h3>
					</div>
					<p class="text-textColor/70 dark:text-textColorDark/70">Access a growing collection of state-of-the-art open-source multimodal models.</p>
				</a>

				<!-- Feature 2: Tools -->
				<a href="/tags/tools" class="block p-6 rounded-lg bg-bgColor/50 dark:bg-bgColorDark/50 border border-borderColor/100 dark:border-borderColorDark/100 shadow-lg hover:shadow-xl transition-shadow duration-300 ease-in-out">
					<div class="flex items-center mb-3">
						<div class="p-2 rounded-full bg-accent-two/10 mr-3 shadow-md border border-borderColor/100 dark:border-borderColorDark/100">
							<!-- Replace SVG with image for Tools -->
							<img src="/images/icons8-tools-100.png" alt="Tools Icon" class="w-8 h-8" />
						</div>
						<h3 class="text-xl font-bold text-black">Tools</h3>
					</div>
					<p class="text-textColor/70 dark:text-textColorDark/70">Utilize intuitive tools designed for efficient development and experimentation.</p>
				</a>

				<!-- Feature 3: Research -->
				<a href="/tags/research" class="block p-6 rounded-lg bg-bgColor/50 dark:bg-bgColorDark/50 border border-borderColor/100 dark:border-borderColorDark/100 shadow-lg hover:shadow-xl transition-shadow duration-300 ease-in-out">
					<div class="flex items-center mb-3">
						<div class="p-2 rounded-full bg-purple-500/10 mr-3 shadow-md border border-borderColor/100 dark:border-borderColorDark/100">
							<!-- Replace SVG with image for Research -->
							<img src="/images/icons8-research-100.png" alt="Research Icon" class="w-8 h-8" />
						</div>
						<h3 class="text-xl font-bold text-black">Research</h3>
					</div>
					<p class="text-textColor/70 dark:text-textColorDark/70">Explore cutting-edge research and contribute to the advancement of multimodal AI.</p>
				</a>
			</div>
		</div>
	</section>

